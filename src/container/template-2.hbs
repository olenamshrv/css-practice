<div class='page'>
  <div class='page_content'>
    <header class="page_block">
        <div class='header'>
            <div class="">
                {{>logo}}
            </div>
        <nav class='header_link'>
            {{!-- {{>nav list=header isVertical=true}} --}}
            <div class="header-nav-right">
                {{>nav list=header}}
            </div>
        </nav>
        </div>
        {{! <hr class='divider' /> }}
        {{!-- {{>divider}} --}}
    </header>

    <section class="page_block">
        <div class="hero">
            {{#with hero}}
                {{>hero title=title text=text}}
                <a class="button" url="{{button.url}}">{{button.text}}</a>
            {{/with}}
        </div>
    </section>

    <section class="page_block">
        <div class="flex-container">
            {{#each preview}}                
                {{>cardPreview class="flex-item" data=this}}
            {{/each}}
        </div>
    </section>

    <main class="page_block">
        <div class="main">
            <div class="row g-0">
                <div class="col-12">
                    <div class="list_header">
                        <div>
                            <h2 class="list_title">List of posts</h2>
                        </div>
                        <div>
                            <div class="category_list">
                                {{#each categories}}
                                    <button class="category_button">{{text}}</button>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-7">
                    <div class="list">
                        {{#each news}}
                            {{> cardPost data=this}}
                        {{/each}}
                    </div>
                </div>
                <div class="col-5">
                    <aside class="list_aside">
                        <div class="about">
                            <h4 class="about_title">About</h4>
                            <p class="about_text">{{about}}</p>
                        </div>

                        {{> linkList data=archive title="Archives"}}
                        {{> linkList data=social title="Social"}}
                    </aside>
                </div>
            </div>
        </div>
    </main>

    {{!-- <div class="page_block">
        <div class="calc">
            <table class="table">
                <caption>My table</caption>
                <tbody>
                    {{#each footer}}
                        <tr>
                            {{#each links}}
                                <td>
                                    {{text}}
                                </td>
                            {{/each}}                        
                            <td></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div> --}}

    <footer class="page_block">
        {{!-- {{>divider}} --}}
        <div class="footer">
            <div>
                {{>logo}}
                <span class="footer_copyright">
                    Copyright 2023-2024
                </span>
            </div>

            {{#each footer}}
            <div class="col-3">
                <span class="footer_title">
                    {{title}}
                </span>
                {{>nav list=links isVertical=true}}
            </div>
            {{/each}}
        </div>
    </footer>
  </div>
</div>